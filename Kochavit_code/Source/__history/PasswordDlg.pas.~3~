unit PasswordDlg;

interface

uses Windows, SysUtils, Classes, Graphics, Forms, Controls, StdCtrls,
  Dialogs, Buttons, Db;

type
  TfrmPasswordDlg = class(TForm)
    Label1: TLabel;
    Password: TEdit;
    btnOk: TBitBtn;
    procedure FormClose(Sender: TObject; var Action: TCloseAction);
    procedure FormCreate(Sender: TObject);
    procedure btnOkClick(Sender: TObject);
  private
    { Private declarations }
    Counter: Integer;
    Pass: String;
  public
    { Public declarations }
    oK: Boolean;
  end;

var
  frmPasswordDlg: TfrmPasswordDlg;

implementation

{$R *.DFM}
uses
   Main;

procedure TfrmPasswordDlg.FormCreate(Sender: TObject);
begin
   Counter := 0;
//   Pass := frmMain.tbEnter.FieldByName(frmMain.fldName).AsString;
end;

procedure TfrmPasswordDlg.btnOkClick(Sender: TObject);
begin
   if Password.Text <> Pass then
   begin
       Password.SetFocus;
       MessageDlg('...הקלדת סיסמא שגויה', mtError, [mbOK], 0);
   end
   else
       oK := True;

   Counter := Counter +1;
   if oK or (Counter = 3) then
       Close;
end;

procedure TfrmPasswordDlg.FormClose(Sender: TObject;
  var Action: TCloseAction);
begin
   Action := caFree;
end;

end.

