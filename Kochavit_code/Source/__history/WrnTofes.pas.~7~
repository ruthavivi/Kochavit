  WordObj.InsertBookMark('NoBkrC', IntToStr(NoBkr));
  WordObj.InsertBookMark('NumberBrCode', NumberBrCode);

  WordObj.InsertBookMark('pI', pI);

//  WordObj.EditDoc;
  WordObj.PrintDoc('1');
